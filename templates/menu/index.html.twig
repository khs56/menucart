{% extends 'base.html.twig' %}

{% block title %}Hello MenuController!{% endblock %}

{% block body %}
	<!-- Playlist section -->
	<section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>Playlists</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
					<li class="control" data-filter=".dish">Dish</li>
					<li class="control" data-filter=".dessert">Dessert</li>
					<li class="control" data-filter=".salad">Salad</li>
					<li class="control" data-filter=".entree">Entree</li>
					<li class="control" data-filter=".soup">Soup</li>
					<li class="control" data-filter=".drink">Drink</li>
					<li class="control" data-filter="all">All</li>
				</ul>
			</div>                                              
			<div class="clearfix"></div>
			<div class="row playlist-area">
				
				{# <div class="mix col-lg-3 col-md-4 col-sm-6 dish">
					<div class="playlist-item">
						<img src="img/playlist/1.jpg" alt="">
						<h5>Live Concerts</h5>
					</div>
				</div> #}

				{% for g in gericht %}
					<div class="mix col-lg-3 col-md-4 col-sm-6 {{g.category}}">
						<div class="playlist-item">
							<img src="{{asset('images/' ~ g.image)}}" alt="{{g.description}}">
							<h5>{{g.name}}</h5>
							<h5>${{g.price}} USD</h5>
							<p>{{g.description}}</p>
						</div>
					</div>
				{% endfor %}
				
			</div>
		</div>
	</section>
	<!-- Playlist section end -->
{% endblock %}
